@model LuxenHotel.Models.ViewModels.Booking.ComboViewModel
@using LuxenHotel.Models.Entities.Booking

<tr data-accommodation-id="@Model.AccommodationId">
    <td>
        <div class="d-flex">
            <div>
                <!--begin::Title-->
                <a href="/admin/combos/Edit/@Model.Id" class="text-gray-800 text-hover-primary fs-5 fw-bold mb-1"
                    data-kt-ecommerce-combo-filter="combo_name">@Model.Name</a>
                <!--end::Title-->
                <!--begin::Description-->
                <div class="text-muted fs-7 fw-bold">@Model.AccommodationName</div>
                <!--end::Description-->
            </div>
        </div>
    </td>
    <td class="text-center">
        <span class="fw-bold">@Model.Price</span>
        <i class="fa-solid fa-dong-sign"></i>
    </td>
    <td class="text-center">
        <!--begin::Badges-->
        @if (Model.Status == Combo.ComboStatus.Published)
        {
            <div class="badge badge-light-success">Published</div>
        }
        else
        {
            <div class="badge badge-light-warning">Unpublished</div>
        }
        <!--end::Badges-->
    </td>
    <td class="text-center">
        <a href="#" class="btn btn-sm btn-light btn-active-light-primary btn-flex btn-center"
            data-kt-menu-trigger="click" data-kt-menu-placement="bottom-end"> Actions <i
                class="ki-duotone ki-down fs-5 ms-1"></i>
        </a>
        <!--begin::Menu-->
        <div class="menu menu-sub menu-sub-dropdown menu-column menu-rounded menu-gray-600 menu-state-bg-light-primary fw-semibold fs-7 w-125px py-4"
            data-kt-menu="true">
            <!--begin::Menu item-->
            <div class="menu-item px-3">
                <a href="/admin/combos/Edit/@Model.Id" class="menu-link px-3"> Edit </a>
            </div>
            <!--end::Menu item-->
            <!--begin::Menu item-->
            <div class="menu-item px-3">
                <a href="#" class="menu-link px-3" data-kt-ecommerce-combo-filter="delete_row"
                    data-combo-id="@Model.Id"> Delete </a>
            </div>
            <!--end::Menu item-->
        </div>
        <!--end::Menu-->
    </td>
</tr>