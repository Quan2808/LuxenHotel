@model LuxenHotel.Models.ViewModels.Booking.AccommodationViewModel

<div>
    <dl class="row">
        <dt class="col-sm-2">Name</dt>
        <dd class="col-sm-10">@Model.Name</dd>
        <dt class="col-sm-2">Price</dt>
        <dd class="col-sm-10">@Model.Price</dd>
        <dt class="col-sm-2">Description</dt>
        <dd class="col-sm-10">@Model.Description</dd>
        <dt class="col-sm-2">Max Occupancy</dt>
        <dd class="col-sm-10">@Model.MaxOccupancy</dd>
        <dt class="col-sm-2">Area</dt>
        <dd class="col-sm-10">@Model.Area</dd>
        <dt class="col-sm-2">Available</dt>
        <dd class="col-sm-10">@Model.IsAvailable</dd>
        <dt class="col-sm-2">Created At</dt>
        <dd class="col-sm-10">@Model.CreatedAt</dd>
    </dl>

    <h3>Thumbnail</h3>
    @if (!string.IsNullOrEmpty(Model.Thumbnail))
    {
        <img src="@Model.Thumbnail" alt="Thumbnail" style="max-width: 200px;" />
    }
    else
    {
        <p>No thumbnail available</p>
    }

    <h3>Media</h3>
    <ul>
        @foreach (var media in Model.Media)
        {
            <li><img src="@media" alt="Media" style="max-width: 200px;" /></li>
        }
    </ul>

    <h3>Additional Services</h3>
    @if (Model.Services.Any())
    {
        <ul>
            @foreach (var service in Model.Services)
            {
                <li>
                    <strong>@service.Name</strong> - @service.Price
                    @if (!string.IsNullOrEmpty(service.Description))
                    {
                        <br />
                        @service.Description
                    }
                </li>
            }
        </ul>
    }
    else
    {
        <p>No additional services available</p>
    }
</div>

<div>
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Edit</a>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>
