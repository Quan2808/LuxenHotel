@model IEnumerable<LuxenHotel.Areas.Admin.Controllers.UserListViewModel>

@foreach (var item in Model)
{

    <tr data-accommodation-id="@item.Id">
        <td class="text-gray-800 text-hover-primary mb-1">
            @item.FullName
        </td>
        <td class="text-gray-600 mb-1">
            @item.Email
        </td>
        <td class="text-center">
            @item.Roles
        </td>
        <td class="text-center">
            <a href="#" class="btn btn-sm btn-light btn-active-light-primary btn-flex btn-center"
                data-kt-menu-trigger="click" data-kt-menu-placement="bottom-end"> Actions <i
                    class="ki-duotone ki-down fs-5 ms-1"></i>
            </a>
            <div class="menu menu-sub menu-sub-dropdown menu-column menu-rounded menu-gray-600 menu-state-bg-light-primary fw-semibold fs-7 w-125px py-4"
                data-kt-menu="true">
                <div class="menu-item px-3">
                    <a href="/admin/combos/Edit/@item.Id" class="menu-link px-3"> Edit </a>
                </div>
            </div>
        </td>
    </tr>
}