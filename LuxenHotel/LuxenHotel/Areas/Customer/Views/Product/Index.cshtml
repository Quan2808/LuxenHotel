// Views/Product/Index.cshtml
@model List<Product>
<h2>Product List</h2>
<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Price</th>
            <th>Description</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model)
        {
            <tr>
                <td>@product.Name</td>
                <td>@product.Price.ToString("C")</td>
                <td>@product.Description</td>
                <td>
                    <a href="@Url.Action("Payment", new { id = product.Id })" class="btn btn-primary">Buy</a>
                </td>
            </tr>
        }
    </tbody>
</table>