@model LuxenHotel.Models.ViewModels.Booking.AccommodationViewModel

<div class="tab-pane fade show active" id="general" role="tab-panel">
    <div class="d-flex flex-column gap-7 gap-lg-10">

        <!--begin::Details-->
        <div class="card card-flush py-4">
            <!--begin::Card header-->
            <div class="card-header">
                <div class="card-title">
                    <h2>Details</h2>
                </div>
            </div>
            <!--end::Card header-->

            <!--begin::Card body-->
            <div class="card-body pt-0">
                <!--begin::Input group-->
                <div class="mb-10 fv-row fv-plugins-icon-container">
                    <!--begin::Label-->
                    <label class="required form-label">Max Occupancy</label>
                    <!--end::Label-->

                    <!--begin::Input-->
                    <input asp-for="MaxOccupancy" class="form-control mb-2" placeholder="Enter max number of guests"
                        type="number" />
                    <!--end::Input-->

                    <!--begin::Validation-->
                    <span asp-validation-for="MaxOccupancy" class="text-danger"></span>
                    <!--end::Validation-->

                    <!--begin::Description-->
                    <div class="text-muted fs-7">
                        Specify the maximum number of guests allowed in the room (1 to 50).
                    </div>
                    <!--end::Description-->
                </div>
                <!--end::Input group-->

                <!--begin::Input group-->
                <div class="mb-10 fv-row fv-plugins-icon-container">
                    <!--begin::Label-->
                    <label asp-for="Area" class="required form-label"></label>
                    <!--end::Label-->

                    <!--begin::Input-->
                    <input asp-for="Area" class="form-control mb-2" placeholder="Enter room area in square meters"
                        type="number" step="0.01" />
                    <!--end::Input-->

                    <!--begin::Validation-->
                    <span asp-validation-for="Area" class="text-danger"></span>
                    <!--end::Validation-->

                    <!--begin::Description-->
                    <div class="text-muted fs-7">
                        Enter the total area of the room in square meters (0 to 10,000).
                    </div>
                    <!--end::Description-->
                </div>
                <!--end::Input group-->

                <!-- Description -->
                <div class="fv-row fv-plugins-icon-container">
                    <!--begin::Label-->
                    <label asp-for="Description" class="form-label"></label>
                    <!--end::Label-->

                    <!--begin::Input-->
                    <input type="hidden" asp-for="Description" id="description-hidden" />
                    <div id="accommodation-desc" class="mb-2" style="height: 300px;"></div>
                    <!--end::Input-->

                    <!--begin::Validation-->
                    <span asp-validation-for="Description" class="text-danger"></span>
                    <!--end::Validation-->

                    <!--begin::Description-->
                    <div class="text-muted fs-7">
                        Provide a detailed description of the accommodation to help guests understand what to expect.
                    </div>
                    <!--end::Description-->
                </div>
            </div>
            <!--end::Card body-->
        </div>
        <!--end::Details-->

        <!--begin::Media-->
        <div class="card card-flush py-4">
            <!--begin::Card header-->
            <div class="card-header">
                <div class="card-title">
                    <h2>Media</h2>
                </div>
            </div>
            <!--end::Card header-->

            <!--begin::Card body-->
            <div class="card-body pt-0">
                <div class="fv-row mb-2">
                    <input type="file" asp-for="MediaFiles" id="realMediaFiles" multiple hidden />
                    <input type="file" id="filepond" multiple accept="image/*" />
                    <span asp-validation-for="MediaFiles" class="text-danger"></span>
                </div>
                <div class="text-muted fs-7">
                    Set the accommodation media gallery. Only image files are accepted and you can upload up to 10
                    files.
                </div>
            </div>
            <!--end::Media-->
        </div>
        <!--end::Card body-->
    </div>
</div>