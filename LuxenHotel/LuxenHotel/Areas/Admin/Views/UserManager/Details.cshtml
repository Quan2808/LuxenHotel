@model LuxenHotel.Areas.Admin.Controllers.UserDetailsViewModel

<div class="d-flex flex-column flex-xl-row">
    <div class="flex-column flex-lg-row-auto w-100 w-xl-350px mb-10">
        @Html.Partial("Partial/Details/_ProfileSection", Model)
    </div>

    <div class="flex-lg-row-fluid ms-lg-15">

        <div class="card pt-4 mb-6 mb-xl-9">
            <!--begin::Card header-->
            <div class="card-header border-0">
                <!--begin::Card title-->
                <div class="card-title">
                    <h2 class="fw-bold mb-0">Order History</h2>
                </div>
                <!--end::Card title-->
            </div>

            <div class="card-body pt-0 pb-5">
                <table class="table align-middle table-row-dashed gy-5" id="kt_table_customers_payment">
                    <thead class="border-bottom border-gray-200 fs-7 fw-bold">
                    <tr class="text-start text-muted text-uppercase gs-0">
                        <th class="min-w-50px"></th>
                        <th class="min-w-150px">order No.</th>
                        <th class="min-w-100px text-center">Status</th>
                        <th class="min-w-100px text-center">Amount</th>
                    </tr>
                    </thead>
                    <tbody class="fs-6 fw-semibold text-gray-600">
                    <tr>
                        <td>
                            <a href="/saul-html-pro/apps/ecommerce/sales/details.html"
                               class="text-gray-600 text-hover-primary mb-1">
                                #15451
                            </a>
                        </td>
                        <td>
                            <span class="badge badge-light-success">Successful</span>
                        </td>
                        <td>
                            $1,200.00
                        </td>
                    </tr>
                    </tbody>
                </table>
            </div>
        </div>

        <h2 class="fw-bold mb-5">Order History</h2>
        @if (Model.Orders != null && Model.Orders.Any())
        {
            foreach (var order in Model.Orders)
            {
                @await Html.PartialAsync("Partial/Details/_OrderHistory", order)
            }
        }
        else
        {
            <div class="alert alert-info">
                No orders found for this user.
            </div>
        }
    </div>
</div>