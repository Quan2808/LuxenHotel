@model LuxenHotel.Models.ViewModels.PaginatedList<LuxenHotel.Models.Entities.Orders.Orders>
@{
    ViewData["Title"] = "My Orders";
}

<div class="container mt-4">
    <h1>My Orders</h1>

    <div class="mb-4">
        <p>Welcome, @ViewData["UserFullName"] - Here are all your bookings with LuxenHotel</p>
    </div>

    <div class="card shadow mb-4">
        <div class="card-header d-flex justify-content-between align-items-center py-3">
            <h6 class="m-0 font-weight-bold text-primary">All Orders</h6>
        </div>
        <div class="card-body">
            <div class="mb-3">
                <form asp-action="MyOrders" method="get" class="form-inline">
                    <div class="input-group">
                        <input type="text" name="SearchString" value="@ViewData["CurrentFilter"]" class="form-control"
                            placeholder="Search by order code, accommodation name..." />
                        <div class="input-group-append">
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-search"></i> Search
                            </button>
                        </div>
                    </div>
                </form>
            </div>

            <div class="table-responsive">
                <table class="table table-bordered table-hover" id="ordersTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>Order Code</th>
                            <th>Accommodation</th>
                            <th>
                                <a asp-action="MyOrders" asp-route-sortOrder="@ViewData["DateSortParam"]"
                                    asp-route-searchString="@ViewData["CurrentFilter"]">
                                    Check-in Date
                                </a>
                            </th>
                            <th>Check-out Date</th>
                            <th>
                                <a asp-action="MyOrders" asp-route-sortOrder="@ViewData["StatusSortParam"]"
                                    asp-route-searchString="@ViewData["CurrentFilter"]">
                                    Status
                                </a>
                            </th>
                            <th>
                                <a asp-action="MyOrders" asp-route-sortOrder="@ViewData["PriceSortParam"]"
                                    asp-route-searchString="@ViewData["CurrentFilter"]">
                                    Total Price
                                </a>
                            </th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.Count == 0)
                        {
                            <tr>
                                <td colspan="7" class="text-center">You don't have any orders yet.</td>
                            </tr>
                        }
                        else
                        {
                            @foreach (var order in Model)
                            {
                                <tr>
                                    <td>@order.OrderCode</td>
                                    <td>@order.Accommodation.Name</td>
                                    <td>@order.CheckInDate.ToString("dd/MM/yyyy")</td>
                                    <td>@order.CheckOutDate.ToString("dd/MM/yyyy")</td>
                                    <td>
                                        @switch (order.Status)
                                        {
                                            case LuxenHotel.Models.Entities.Orders.OrderStatus.Created:
                                                <span class="badge badge-primary">Created</span>
                                                break;
                                            case LuxenHotel.Models.Entities.Orders.OrderStatus.Confirmed:
                                                <span class="badge badge-success">Confirmed</span>
                                                break;
                                            case LuxenHotel.Models.Entities.Orders.OrderStatus.Completed:
                                                <span class="badge badge-info">Completed</span>
                                                break;
                                            case LuxenHotel.Models.Entities.Orders.OrderStatus.Cancelled:
                                                <span class="badge badge-danger">Cancelled</span>
                                                break;
                                            default:
                                                <span class="badge badge-secondary">@order.Status</span>
                                                break;
                                        }
                                    </td>
                                    <td>@order.TotalPrice.ToString("N0") VND</td>
                                    <td>
                                        <div class="btn-group" role="group">
                                            <a asp-action="Details" asp-route-id="@order.Id" class="btn btn-info btn-sm">
                                                <i class="fas fa-info-circle"></i> Details
                                            </a>
                                            @if (order.Status == LuxenHotel.Models.Entities.Orders.OrderStatus.Created)
                                            {
                                                <a asp-action="Edit" asp-route-id="@order.Id" class="btn btn-warning btn-sm">
                                                    <i class="fas fa-edit"></i> Edit
                                                </a>
                                                <button type="button" class="btn btn-danger btn-sm" data-toggle="modal"
                                                    data-target="#cancelModal-@order.Id">
                                                    <i class="fas fa-times"></i> Cancel
                                                </button>
                                            }
                                        </div>

                                        <!-- Cancel Modal -->
                                        <div class="modal fade" id="cancelModal-@order.Id" tabindex="-1" role="dialog"
                                            aria-labelledby="cancelModalLabel-@order.Id" aria-hidden="true">
                                            <div class="modal-dialog" role="document">
                                                <div class="modal-content">
                                                    <div class="modal-header">
                                                        <h5 class="modal-title" id="cancelModalLabel-@order.Id">Cancel Order
                                                        </h5>
                                                        <button type="button" class="close" data-dismiss="modal"
                                                            aria-label="Close">
                                                            <span aria-hidden="true">&times;</span>
                                                        </button>
                                                    </div>
                                                    <form asp-action="Cancel" asp-route-id="@order.Id" method="post">
                                                        <div class="modal-body">
                                                            <p>Are you sure you want to cancel order
                                                                <strong>@order.OrderCode</strong>?</p>
                                                            <p>Please provide a reason for cancellation:</p>
                                                            <textarea name="cancellationReason" class="form-control" rows="3"
                                                        required></textarea>
                                                        </div>
                                                        <div class="modal-footer">
                                                            <button type="button" class="btn btn-secondary"
                                                                data-dismiss="modal">Close</button>
                                                            <button type="submit" class="btn btn-danger">Confirm
                                                                Cancellation</button>
                                                        </div>
                                                    </form>
                                                </div>
                                            </div>
                                        </div>
                                    </td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>

            <!-- Pagination -->
            @{
                var prevDisabled = !Model.HasPreviousPage ? "disabled" : "";
                var nextDisabled = !Model.HasNextPage ? "disabled" : "";
            }

            <div class="d-flex justify-content-between align-items-center mt-3">
                <div>
                    Showing @Model.Count of @Model.TotalItems items
                </div>
                <nav aria-label="Page navigation">
                    <ul class="pagination">
                        <li class="page-item @prevDisabled">
                            <a asp-action="MyOrders" asp-route-pageNumber="@(Model.PageIndex - 1)"
                                asp-route-sortOrder="@ViewData["CurrentSort"]"
                                asp-route-searchString="@ViewData["CurrentFilter"]" class="page-link @prevDisabled">
                                Previous
                            </a>
                        </li>
                        @for (int i = 1; i <= Model.TotalPages; i++)
                        {
                            <li class="page-item @(i == Model.PageIndex ? "active" : "")">
                                <a asp-action="MyOrders" asp-route-pageNumber="@i"
                                    asp-route-sortOrder="@ViewData["CurrentSort"]"
                                    asp-route-searchString="@ViewData["CurrentFilter"]" class="page-link">
                                    @i
                                </a>
                            </li>
                        }
                        <li class="page-item @nextDisabled">
                            <a asp-action="MyOrders" asp-route-pageNumber="@(Model.PageIndex + 1)"
                                asp-route-sortOrder="@ViewData["CurrentSort"]"
                                asp-route-searchString="@ViewData["CurrentFilter"]" class="page-link @nextDisabled">
                                Next
                            </a>
                        </li>
                    </ul>
                </nav>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('#ordersTable').addClass('table-responsive-sm');
        });
    </script>
}
